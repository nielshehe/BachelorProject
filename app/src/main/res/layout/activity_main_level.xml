<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bachelorproject.MainLevelActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLevel1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="31dp"
        android:background="#00FFFFFF"
        android:src="@drawable/levelone" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLevel2"
        android:background="#00FFFFFF"
        android:src="@drawable/leveltwo"
        android:layout_alignTop="@+id/btnLevel1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLevel3"
        android:background="#00FFFFFF"
        android:src="@drawable/levelthree"
        android:layout_alignTop="@+id/btnLevel2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="45dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLevel4"
        android:background="#00FFFFFF"
        android:src="@drawable/levelfour"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnLevel1"
        android:layout_alignStart="@+id/btnLevel1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLevel5"
        android:background="#00FFFFFF"
        android:src="@drawable/levelfive"
        android:layout_alignTop="@+id/btnLevel4"
        android:layout_alignLeft="@+id/btnLevel2"
        android:layout_alignStart="@+id/btnLevel2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLevel6"
        android:background="#00FFFFFF"
        android:src="@drawable/levelsix"
        android:layout_alignTop="@+id/btnLevel5"
        android:layout_alignRight="@+id/btnLevel3"
        android:layout_alignEnd="@+id/btnLevel3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a Level"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
